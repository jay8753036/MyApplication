<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1039_jay.myapplication.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="340dp"
        android:text="請按按鈕扣!!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="?attr/colorButtonNormal"
        android:layout_height="80dp" />

    <Button
        android:text="全部清除"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:text="加入"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="160dp"
        android:layout_below="@+id/score1"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:text="play1"
                android:layout_below="@+id/button"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:text="play2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView1"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:text="play3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/textView4"
                android:text="play4"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/textView5"
                android:text="play5"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/textView6"
                android:text="play6"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:text="play7"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:text="play8"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:text="play9"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:text="play10"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView9"
                android:layout_alignParentStart="true" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/textViewT"
        android:textSize="24sp"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/scrollView1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_width="250dp" />

    <Button
        android:text="LINE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="@android:drawable/btn_star_big_on"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/textViewT"
        android:layout_alignBottom="@+id/textViewT"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:text="抽一個"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/score"
        android:text="比數"
        android:layout_width="70dp"
        android:background="@android:color/holo_green_light"
        android:textSize="24sp" />

    <TextView
        android:text="本0:敵0"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:id="@+id/score1"
        android:textSize="24sp"
        android:layout_below="@+id/score"
        android:layout_alignParentStart="true"
        android:layout_width="250dp" />

    <Button
        android:text="本+"
        android:layout_width="50dp"
        android:id="@+id/add1"
        android:textSize="8sp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/score"
        android:layout_toEndOf="@+id/score"
        android:layout_marginStart="17dp" />

    <Button
        android:text="敵+"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/add2"
        android:textSize="8sp"
        android:layout_above="@+id/score1"
        android:layout_toEndOf="@+id/button"
        android:layout_marginStart="15dp" />


</RelativeLayout>
